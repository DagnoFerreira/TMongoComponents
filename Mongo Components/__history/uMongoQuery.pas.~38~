unit uMongoQuery;

interface

uses
  System.SysUtils, System.Classes, mongoWire, bsonDoc, bsonUtils, FMX.Forms,
  uEditMongo, uMongoDocument, System.Generics.Collections, FMX.Layouts;

type
  TMongoQuery = class(TComponent)
    private
      FMongoWire : TMongoWire;
      FAtivar : Boolean;
      FCollection : String;
      procedure setAtivar(const Value: boolean);
      procedure preencherMongoDoc(Objeto : TObject; var MongoDoc : TMongoDocument);
    public
       FMongoWireQuery : TMongoWireQuery;
       constructor Create(AOwner: TComponent); override;
       function InserirObjeto(Objeto : TObject) : Boolean;
    published
      property MongoWire : TMongoWire read FMongoWire write FMongoWire;
      property Ativar : Boolean read FAtivar write setAtivar;
      property Collection : String read FCollection write FCollection;
  end;

procedure Register;

implementation

procedure Register;
begin
  RegisterComponents('Mongo Components', [TMongoQuery]);
  //RegisterActions('Mongo Components', [TMongoQuery], nil);
end;

constructor TMongoQuery.Create(AOwner: TComponent);
begin
  inherited Create(AOwner);
end;

procedure TMongoQuery.setAtivar(const Value: boolean);
begin
  FMongoWireQuery := TMongoWireQuery.Create(FMongoWire);
  FAtivar := Value;
end;

function TMongoQuery.InserirForm(Objeto: TObject) : Boolean;
var
  d : IBSONDocument;
  MongoDoc : TMongoDocument;
  i : Integer;
begin
  Result := True;
  d := nil;
  MongoDoc := TMongoDocument.Create;
  try
    try
      preencherMongoDoc(Objeto, MongoDoc);
      MongoDoc.convertBSON(d);
      FMongoWire.Insert(FCollection, d);
    except
      Result := False;
    end;
  finally
    MongoDoc.Free;
  end;
end;

procedure TMongoQuery.preencherMongoDoc(Objeto: TObject; var MongoDoc: TMongoDocument);
var
  i : Integer;
begin
  for i:= 0 to (Objeto.ComponentCount -1) do
  begin
    if (Objeto.Components[i] is TEditMongo) then
    begin
      case TEditMongo(Objeto.Components[i]).MongoTipoCampo of
        Texto :
          begin
            MongoDoc.addKey(TEditMongo(Objeto.Components[i]).MongoCampo, TEditMongo(Objeto.Components[i]).Text);
          end;
        Numerico :
          begin
            MongoDoc.addKey(TEditMongo(Objeto.Components[i]).MongoCampo, TEditMongo(Objeto.Components[i]).toNumerico);
          end;
        Moeda :
          begin
            MongoDoc.addKey(TEditMongo(Objeto.Components[i]).MongoCampo, TEditMongo(Objeto.Components[i]).toMoeda);
          end;
        DataHora :
          begin
            MongoDoc.addKey(TEditMongo(Objeto.Components[i]).MongoCampo, TEditMongo(Objeto.Components[i]).toDataHora);
          end;
      end;
    end;
  end;
end;


end.
